@model CategoryFormViewModel
@{
	ViewData["Title"] = "Add Category";

}


<div class="container mt-5">
	
	<form id="categoryForm" enctype="multipart/form-data" method="post">
		<div class="mb-3">
			<label asp-for="Name" class="form-label">Category Name</label>
			<input asp-for="Name" class="form-control" autocomplete="Name" aria-required="true" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Image" class="form-label">Category Image</label>
			<input asp-for="Image" class="form-control" type="file" id="formFile">
			<span asp-validation-for="Image" class="text-danger"></span>
			<div class="m-1 image-preview-gallery row">

			</div>
		</div>


		<div>

			<button type="submit" asp-area="Admin" asp-controller="Categories" asp-action="Add" class="btn btn-primary">Add Category</button>
		</div>
	</form>
</div>

<!-- Add the Bootstrap JS script -->
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/uploadImage.js"></script>
}
