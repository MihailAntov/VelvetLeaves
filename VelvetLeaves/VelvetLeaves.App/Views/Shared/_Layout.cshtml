@*@model IEnumerable<CategoryListViewModel>*@
	@inject IMenuService menuService
	@inject IImageService imageService
	@{
		var Menu = await menuService.GetMenuCategoriesAsync();
	}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - VelvetLeaves</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/VelvetLeaves.App.styles.css" asp-append-version="true" />

</head>
<body>
	<img id="background" src="/img/bg.jpg"/>
	<header>
		<nav id="mainNavBar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			
				<a class="navbar-brand text-lg-center link-dark" asp-area="" asp-controller="Home" asp-action="Index">Velvet Leaves</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						@if (Menu!=null)
						
						{
							
							
							
							@foreach (var category in @Menu)
							
							{
								<li class="nav-item dropdown">
									
										<a href="" class="nav-link dropdown-toggle m-2" id="category@(category.Id)"  data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											@category.Name
										</a>
										<div class="dropdown-menu border-0" aria-labelledby="category@(category.Id)">
											
											<a asp-area="" asp-controller="Products" asp-action="ProductsFiltered" asp-route-categoryId="@category.Id" class="dropdown-item">All</a>
											@foreach (var subcategory in category.Subcategories)
											{
												<a asp-area="" class="dropdown-item" asp-controller="Products" asp-action="ProductsFiltered" asp-route-subcategoryId="@subcategory.Id">@subcategory.Name</a>
											}

										</div>
									

								</li>
							}
						}

						<li class="nav-item">
										<a class="nav-link m-2" type="button" asp-controller="Galleries" asp-action="All">Galleries</a>
									

								</li>
					</ul>
					<partial name="_LoginPartial" />
				</div>
			
		</nav>
	</header>
	<div class="container">
		
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - VelvetLeaves.App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://kit.fontawesome.com/2d34f22aab.js" crossorigin="anonymous"></script>
	
	
	@await RenderSectionAsync("Scripts", required: false)
		<partial name="_NotificationsPartial"></partial>

</body>
</html>
