@model ShoppingCartViewModel

<div class="container-fluid">
    <h1 class="mb-4">Shopping Cart</h1>

    <div class="row">
        <div class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.Items){
                        <tr>
                        <td>@item.Name</td>
                        <td>@item.Price BGN</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Price * item.Quantity)</td>
                    </tr>
                    }
                    
                   
                </tbody>
            </table>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Order Summary</h5>
                    <p class="card-text">Total items: @Model.TotalItems</p>
                    <h4 class="card-text">Total: @Model.Total BGN</h4>
                    <a href="#" class="btn btn-primary">Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>