@model CheckoutFormViewModel


<form method="post">
	<ul hidden>
		@for(int i = 0; i < Model.ShoppingCart.Items.Count; i++)
		{
			<li>
				<input asp-for="ShoppingCart.Items[i].Id" value="@Model.ShoppingCart.Items[i].Id" />
				<input asp-for="ShoppingCart.Items[i].Quantity" value="@Model.ShoppingCart.Items[i].Quantity" />
			</li>
		}
	</ul>

	<button asp-controller="Order" asp-action="Checkout" class="btn btn-primary" type="submit">Place Order</button>
</form>